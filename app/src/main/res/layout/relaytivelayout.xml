<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/r1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="#000">

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/r2"
        android:layout_toRightOf="@+id/r1"
        android:layout_below="@+id/r1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="#da1919">

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/r3"
        android:layout_toRightOf="@+id/r2"
        android:layout_below="@+id/r2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="#8b8686">

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/r4"
        android:layout_toLeftOf="@+id/r3"
        android:layout_below="@+id/r3"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="#da1e1e">

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/r5"
        android:layout_toLeftOf="@+id/r4"
        android:layout_below="@+id/r4"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="#1eda9b">

    </RelativeLayout>
    <RelativeLayout
        android:layout_toRightOf="@+id/r5"
        android:layout_below="@+id/r5"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="#1e24da">

    </RelativeLayout>

    </RelativeLayout>

